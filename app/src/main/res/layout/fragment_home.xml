<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.justagroup.justabeer.Fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- cards -->

                <android.support.v7.widget.CardView
                    android:id="@+id/hangoutCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/cardMargin"
                    app:cardBackgroundColor="@color/cardBg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hangoutCardTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardHeaderBg"
                            android:capitalize="characters"
                            android:padding="10dp"
                            android:paddingHorizontal="4sp"
                            android:paddingVertical="4sp"
                            android:text="Beer, Södermalm 19-20"
                            android:textColor="@color/cardHeaderText"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/cbPicView"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="3"
                            android:src="@drawable/bar" />

                        <Button
                            android:id="@+id/hangoutCardProfile"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif"
                            android:padding="10dp"
                            android:text="@string/card_profile"
                            android:textAlignment="viewStart"
                            android:textColor="@color/link"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/hangoutCardContent1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Anyone up for a beer?"
                            android:textColor="@color/cardText"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:paddingTop="10dp"
                                android:src="@drawable/users" />

                            <TextView
                                android:id="@+id/hangoutCardPeople"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:padding="10dp"
                                android:text="3"
                                android:textColor="@color/cardText"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:paddingTop="10dp"
                                android:src="@drawable/chat" />

                            <TextView
                                android:id="@+id/hangoutCardMessages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:padding="10dp"
                                android:text="12"
                                android:textColor="@color/cardText"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/hangout_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="@color/buttonBg"
                            android:bottomLeftRadius="10dp"
                            android:bottomRightRadius="10dp"
                            android:text="@string/card_seemorebutton"
                            android:textColor="@color/buttonText"
                            android:topLeftRadius="10dp"
                            android:topRightRadius="10dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/hangoutCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/cardMargin"
                    app:cardBackgroundColor="@color/cardBg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hangoutCardTitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardHeaderBg"
                            android:capitalize="characters"
                            android:padding="10dp"
                            android:paddingHorizontal="4sp"
                            android:paddingVertical="4sp"
                            android:text="Beer, Södermalm 19-20"
                            android:textColor="@color/cardHeaderText"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/cbPicView1"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="3"
                            android:src="@drawable/bar" />

                        <Button
                            android:id="@+id/hangoutCardProfile1"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif"
                            android:padding="10dp"
                            android:text="@string/card_profile"
                            android:textAlignment="viewStart"
                            android:textColor="@color/link"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/hangoutCardContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Anyone up for a beer?"
                            android:textColor="@color/cardText"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView23"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:paddingTop="10dp"
                                android:src="@drawable/users" />

                            <TextView
                                android:id="@+id/hangoutCardPeople2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:padding="10dp"
                                android:text="3"
                                android:textColor="@color/cardText"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:paddingTop="10dp"
                                android:src="@drawable/chat" />

                            <TextView
                                android:id="@+id/hangoutCardMessages2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:padding="10dp"
                                android:text="12"
                                android:textColor="@color/cardText"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/hangout_button_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="@color/buttonBg"
                            android:bottomLeftRadius="10dp"
                            android:bottomRightRadius="10dp"
                            android:text="@string/card_seemorebutton"
                            android:textColor="@color/buttonText"
                            android:topLeftRadius="10dp"
                            android:topRightRadius="10dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
