<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/hangoutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardMargin"
        app:cardBackgroundColor="@color/cardBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hangoutCardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardHeaderBg"
                android:capitalize="characters"
                android:padding="10dp"
                android:paddingHorizontal="4sp"
                android:paddingVertical="4sp"
                android:text="SÖDERMALM, 19-20"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <ImageView
                android:id="@+id/cbPicView"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"
                android:src="@drawable/bar_bengal" />

            <Button
                android:id="@+id/hangoutCardProfile"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="@string/card_profile"
                android:textAlignment="viewStart"
                android:textColor="@color/link"
                android:visibility="visible" />

            <TextView
                android:id="@+id/hangoutCardContent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Anyone up for a beer?"
                android:textColor="@color/cardText"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/users" />

                <TextView
                    android:id="@+id/hangoutCardPeople"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="3"
                    android:textColor="@color/cardText"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/chat" />

                <TextView
                    android:id="@+id/hangoutCardMessages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="12"
                    android:textColor="@color/cardText"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/hangout_button"
                    android:layout_width="150dp"
                    android:layout_height="31dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@color/buttonBg"
                    android:bottomLeftRadius="50dp"
                    android:bottomRightRadius="10dp"
                    android:text="@string/card_seemorebutton"
                    android:textColor="@color/buttonText"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>