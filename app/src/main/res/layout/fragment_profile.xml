<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justagroup.justabeer.Fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                app:cardBackgroundColor="@color/cardBg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardHeaderBg"
                        android:capitalize="characters"
                        android:gravity="center"
                        android:padding="10dp"
                        android:paddingHorizontal="4sp"
                        android:paddingVertical="4sp"
                        android:text="GIRL 24"
                        android:textColor="@color/cardHeaderText"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                    <!--android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Menu" -->
                    <!--my phone doesnt support the higher API needed for this hence for commenting out
                     uncomment to test if you have API21-->

                    <ImageView
                        android:id="@+id/profile_image_view"
                        android:layout_width="280dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/logo"
                        tools:layout_editor_absoluteX="55dp"
                        tools:layout_editor_absoluteY="130dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/editNameCaption"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="NAME"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/editName"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/edit_text"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Name"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Age"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="AGE"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/profile_age"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:forceHasOverlappingRendering="false"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="23"
                            android:textColor="@color/cardText"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/editAge"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/edit_text"
                            android:ems="10"
                            android:inputType="textShortMessage|number"
                            android:text="23"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Gender"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="GENDER"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/profile_gender"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:forceHasOverlappingRendering="false"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Female"
                            android:textColor="@color/cardText"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/editGender"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/btn_dropdown"
                            android:entries="@array/genderSpinner" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/About"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="INTERESTS"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/profile_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:forceHasOverlappingRendering="false"
                            android:padding="10dp"
                            android:text="Meeting new people and cultures"
                            android:textColor="@color/cardText"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/editInterests"
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/edit_text"
                            android:ems="10"
                            android:inputType="textMultiLine" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/editModeButton"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_margin="15dp"
                        android:background="@color/buttonBg"
                        android:bottomLeftRadius="10dp"
                        android:bottomRightRadius="10dp"
                        android:text="@string/profile_edit"
                        android:textColor="@color/buttonText"
                        android:topLeftRadius="10dp"
                        android:topRightRadius="10dp" />

                    <LinearLayout
                        android:id="@+id/editButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/saveButton"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:background="@color/buttonBg"
                            android:bottomLeftRadius="10dp"
                            android:bottomRightRadius="10dp"
                            android:text="SAVE"
                            android:textColor="@color/ok"
                            android:topLeftRadius="10dp"
                            android:topRightRadius="10dp" />

                        <Button
                            android:id="@+id/cancelButton"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:background="@color/buttonBg"
                            android:bottomLeftRadius="10dp"
                            android:bottomRightRadius="10dp"
                            android:text="CANCEL"
                            android:textColor="@color/danger"
                            android:topLeftRadius="10dp"
                            android:topRightRadius="10dp" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

