<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justagroup.justabeer.Fragments.MyHangoutsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Tab layout -->
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabItem
                android:id="@+id/joining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hangouts_tab1" />

            <android.support.design.widget.TabItem
                android:id="@+id/pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hangouts_tab2" />

            <android.support.design.widget.TabItem
                android:id="@+id/hosting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hangouts_tab3" />
        </android.support.design.widget.TabLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:id="@+id/contentWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!--Tab contents (add dynamic cards and maybe separate container fragments in future) -->

                <!--Joining tab content-->
                <LinearLayout
                android:id="@+id/joiningContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:id="@+id/hangoutCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="@dimen/activity_vertical_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/hangoutCardTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:capitalize="characters"
                                android:padding="10dp"
                                android:paddingHorizontal="4sp"
                                android:paddingVertical="4sp"
                                android:text="Beer, SÃ¶dermalm 19-20"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/cbPicView"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="3"
                                android:src="@drawable/map" />

                            <Button
                                android:id="@+id/hangoutCardProfile"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="#FFFFFF"
                                android:fontFamily="sans-serif"
                                android:padding="10dp"
                                android:text="@string/card_profile"
                                android:textAlignment="viewStart"
                                android:textColor="#333333"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/hangoutCardContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Anyone up for a beer?"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/hangoutCardPeople"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:text="Joining: 3" />

                                <TextView
                                    android:id="@+id/hangoutCardMessages"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:autoText="false"
                                    android:forceHasOverlappingRendering="false"
                                    android:gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:text="Messages: 5" />
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:background="@color/colorPrimary"
                                android:bottomLeftRadius="10dp"
                                android:bottomRightRadius="10dp"
                                android:text="@string/card_seemorebutton"
                                android:textColor="#FFFFFF"
                                android:topLeftRadius="10dp"
                                android:topRightRadius="10dp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <!--Pending Content-->
                <LinearLayout
                    android:id="@+id/pendingContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <android.support.v7.widget.CardView
                        android:id="@+id/hangoutCard3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="@dimen/activity_vertical_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/hangoutCard3Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:capitalize="characters"
                                android:padding="10dp"
                                android:paddingHorizontal="4sp"
                                android:paddingVertical="4sp"
                                android:text="Beer @ Stureplan 18-20"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <!--<com.google.android.gms.maps.MapView
                                android:layout_width="match_parent"
                                android:layout_height="153dp" />-->

                            <ImageView
                                android:id="@+id/cbPicView1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="3"
                                android:src="@drawable/map" />

                            <Button
                                android:id="@+id/hangoutCard3Profile"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="#FFFFFF"
                                android:fontFamily="sans-serif"
                                android:padding="10dp"
                                android:text="@string/card_profile"
                                android:textAlignment="viewStart"
                                android:textColor="#333333"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/hangoutCard3Content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Let's party!"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/hangoutCard3People"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:text="Joining: 3" />

                                <TextView
                                    android:id="@+id/hangoutCard3Messages"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:autoText="false"
                                    android:forceHasOverlappingRendering="false"
                                    android:gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:text="Messages: 5" />
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:background="@color/colorPrimary"
                                android:bottomLeftRadius="10dp"
                                android:bottomRightRadius="10dp"
                                android:text="@string/card_seemorebutton"
                                android:textColor="#FFFFFF"
                                android:topLeftRadius="10dp"
                                android:topRightRadius="10dp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <!--Hosting Content-->
                <LinearLayout
                    android:id="@+id/hostingContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <android.support.v7.widget.CardView
                        android:id="@+id/hangoutCard4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="@dimen/activity_vertical_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/hangoutCard4Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:capitalize="characters"
                                android:padding="10dp"
                                android:paddingHorizontal="4sp"
                                android:paddingVertical="4sp"
                                android:text="Food @ Kista 17-18"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <!--<com.google.android.gms.maps.MapView
                                android:layout_width="match_parent"
                                android:layout_height="153dp" />-->

                            <ImageView
                                android:id="@+id/cbPicView2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="3"
                                android:src="@drawable/map" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="#FFFFFF"
                                android:fontFamily="sans-serif"
                                android:padding="10dp"
                                android:text="@string/card_profile"
                                android:textAlignment="viewStart"
                                android:textColor="#333333"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/hangoutCard1Content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Anyone interested in Italy game?"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/hangoutCard1People"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:text="Joining: 3" />

                                <TextView
                                    android:id="@+id/hangoutCard1Messages"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:autoText="false"
                                    android:forceHasOverlappingRendering="false"
                                    android:gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:text="Messages: 5" />
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:background="@color/colorPrimary"
                                android:bottomLeftRadius="10dp"
                                android:bottomRightRadius="10dp"
                                android:text="@string/card_seemorebutton"
                                android:textColor="#FFFFFF"
                                android:topLeftRadius="10dp"
                                android:topRightRadius="10dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <!-- tab content ends -->
            </LinearLayout> <!--tab content wrapper-->
        </ScrollView>
    </LinearLayout>
</FrameLayout>
