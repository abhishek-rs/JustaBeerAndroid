<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.justagroup.justabeer.Fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/hangoutCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hangoutCard1Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#000000"
                            android:capitalize="characters"
                            android:padding="10dp"
                            android:paddingHorizontal="4sp"
                            android:paddingVertical="4sp"
                            android:text="Beer @ Södermalm 19-20"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <com.google.android.gms.maps.MapView
                            android:layout_width="match_parent"
                            android:layout_height="153dp" />

                        <Button
                            android:id="@+id/hangoutCard1Profile"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="#FFFFFF"
                            android:fontFamily="sans-serif"
                            android:padding="10dp"
                            android:text="@string/card_profile"
                            android:textAlignment="viewStart"
                            android:textColor="#333333"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/hangoutCard1Content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Anyone up for a beer?"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/hangoutCard1People"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Joining: 3" />

                            <TextView
                                android:id="@+id/hangoutCard1Messages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autoText="false"
                                android:forceHasOverlappingRendering="false"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Messages: 5" />
                        </LinearLayout>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="@color/colorPrimary"
                            android:bottomLeftRadius="10dp"
                            android:bottomRightRadius="10dp"
                            android:text="@string/card_seemorebutton"
                            android:textColor="#FFFFFF"
                            android:topLeftRadius="10dp"
                            android:topRightRadius="10dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/hangoutCard2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hangoutCard2Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#000000"
                            android:capitalize="characters"
                            android:padding="10dp"
                            android:paddingHorizontal="4sp"
                            android:paddingVertical="4sp"
                            android:text="Beer @ Södermalm 19-20"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <com.google.android.gms.maps.MapView
                            android:layout_width="match_parent"
                            android:layout_height="153dp" />

                        <Button
                            android:id="@+id/hangoutCard2Profile"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="#FFFFFF"
                            android:fontFamily="sans-serif"
                            android:padding="10dp"
                            android:text="@string/card_profile"
                            android:textAlignment="viewStart"
                            android:textColor="#333333"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/hangoutCard2Content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Anyone up for a beer?" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/hangoutCard2People"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Joining: 3" />

                            <TextView
                                android:id="@+id/hangoutCard2Messages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autoText="false"
                                android:forceHasOverlappingRendering="false"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Messages: 5" />
                        </LinearLayout>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="@color/colorPrimary"
                            android:bottomLeftRadius="10dp"
                            android:bottomRightRadius="10dp"
                            android:text="@string/card_seemorebutton"
                            android:textColor="#FFFFFF"
                            android:topLeftRadius="10dp"
                            android:topRightRadius="10dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
