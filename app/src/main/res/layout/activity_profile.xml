<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context="com.justagroup.justabeer.ProfileActivity">

    <include
        android:id="@+id/top_nav"
        layout="@layout/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewpager"
        android:layout_weight="1"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                app:cardBackgroundColor="@color/cardBg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardHeaderBg"
                        android:capitalize="characters"
                        android:gravity="center"
                        android:padding="10dp"
                        android:paddingHorizontal="4sp"
                        android:paddingVertical="4sp"
                        android:text="GIRL 24"
                        android:textColor="@color/cardHeaderText"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                    <!--android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Menu" -->
                    <!--my phone doesnt support the higher API needed for this hence for commenting out
                     uncomment to test if you have API21-->

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="280dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/logo"
                        tools:layout_editor_absoluteX="55dp"
                        tools:layout_editor_absoluteY="130dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Age"
                            android:layout_width="180dp"
                            android:layout_height="39dp"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="AGE"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/user_age"
                            android:layout_width="180dp"
                            android:layout_height="39dp"
                            android:autoText="false"
                            android:forceHasOverlappingRendering="false"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="23"
                            android:textColor="@color/cardText"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Gender"
                            android:layout_width="180dp"
                            android:layout_height="39dp"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="GENDER"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/user_gender"
                            android:layout_width="180dp"
                            android:layout_height="39dp"
                            android:forceHasOverlappingRendering="false"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Female"
                            android:textColor="@color/cardText"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/About"
                            android:layout_width="149dp"
                            android:layout_height="39dp"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="INTERESTS"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/user_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:autoText="false"
                            android:forceHasOverlappingRendering="false"
                            android:padding="10dp"
                            android:text="Meeting new people and cultures"
                            android:textColor="@color/cardText"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
